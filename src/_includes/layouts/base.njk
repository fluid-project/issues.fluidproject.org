<!DOCTYPE html>
<html lang="en" dir="ltr" data-color-scheme="light">
    <head>
        <title>{% if title %} {{ title }} {% else %} {{ site.title }} {% endif %} | {{ site.name }}</title>

        {% include "partials/global/meta.njk" %}

        {% include "partials/global/stylesheets.njk" %}

        <script type="module" src="/assets/scripts/relative-time/bundle.js"></script>
    </head>
    <body class="{{ pageType }} {{ pageClasses }}">
        <header class="mt-3">
            <a class="skip-link" href="#main">Skip to Content</a>
            {% block pageHeader %}
                <h1>{% if heading %} {{ heading }} {% else %} {{ site.name }} {% endif %}</h1>
            {% endblock %}
        </header>
        <main id="main">
            {% block content %}
            <div class="content">
                {{ content | safe }}
            </div>
            {% endblock %}
        </main>
        <footer>
            {% block footer %}
            {% endblock %}
        </footer>
    </body>
</html>
